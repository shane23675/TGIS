
@{
    ViewBag.Title = "忘記密碼";
    Layout = "~/Views/Shared/_LayoutPlayer.cshtml";
}

@*圖片來源:<a href='https://pngtree.com/so/信封'>信封 png from pngtree.com</a>*@
<div class="row">
    <div class="col-6 ">
        <img src="~/images/envelope letter.png" class="img-fluid p-5" />
    </div>
    <div class="col-4 remind">
        <form method="post" action="~/Login/ForgetPwd">
            <h2 >忘記密碼</h2>
            <div>
                <label class="form-text">帳號：</label>
                <input id="ac" type="text" name="account" class="form-control d-inline" />
                <br />
                <label class="form-text">信箱：</label>
                <input id="pwd" type="text" name="Email" class="form-control d-inline" />
            </div>
            <div class="text-right">
                <span class="text-danger">@ViewBag.Error</span>
                <input id="Submit1" type="submit" value="送出" class="btn btn-info mt-2" />
            </div>
        </form>
    </div>
</div>





















