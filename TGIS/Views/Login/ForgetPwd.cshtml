
@{
    ViewBag.Title = "ForgetPwd";
}

<h2>ForgetPwd</h2>
<form method="post" action="~/Login/ForgetPwd" class="container">
    <h2>忘記密碼</h2>
    <div class="form-group">
        <span>帳號:</span>
    </div>
    <div>
        <input id="ac" type="text" name="account" class="form-control w-25" />
    </div>
    <div class="form-group">
        <span>電子信箱:</span>
    </div>
    <div>
        <input id="pwd" type="text" name="Email" class="form-control w-25" />
