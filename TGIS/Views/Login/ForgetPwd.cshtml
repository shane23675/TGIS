
@{
    ViewBag.Title = "ForgetPwd";
    Layout = "~/Views/Shared/_LayoutPlayer.cshtml";
}

    <div class="d-flex justify-content-center align-items-center " style="height:80vh">
        <div class="card bg-light mb-3" id="box-1">
            <form method="post" action="~/Login/ForgetPwd">
                <h2 class="card-header">Forget Password</h2>
                <div class="card-body">
                    <label>帳號:</label>
                    <input id="ac" type="text" name="account" class="form-control d-inline" />
                    <br />
                    <label>信箱:</label>
                    <input id="pwd" type="text" name="Email" class="form-control d-inline" />
                </div>

                <div class="text-right card-footer">
                    <span class="text-danger">@ViewBag.Error</span>
                    <input id="Submit1" type="submit" value="submit" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>


















