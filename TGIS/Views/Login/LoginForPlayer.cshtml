
@{
    ViewBag.Title = "LoginForPlayer";
    Layout = "~/Views/Shared/_LayoutPlayer.cshtml";
}

    <div class="row justify-content-center align-items-center" style="height:80vh">


            <form method="post" action="~/Login/LoginForPlayer" class="">

                <div class="login_box">

                    <div class="card border-info" style="max-width: 18rem;">
                        <div class="card-header bg-transparent border-info">
                            <h2 class="text-center text-info">Player Log In</h2>
                        </div>
                        <div class="card-body text-info">
                            <span>Account</span>
                            <input id="ac" type="text" name="account" class="form-control" /><br />
                            <span>Password</span>
                            <input id="pwd" type="password" name="pwd" class="form-control" />
                        </div>
                        <div class="card-footer bg-transparent border-info text-right">
                            <p class="text-danger">@ViewBag.Error</p>
                            <button type="button" class="btn btn-secondary">@Html.ActionLink("Forget Password", "ForgetPwd", new { }, new {style="color:#f0f0f0;text-decoration:none"})</button>
                            <input id="Submit1" type="submit" value="Log In" class="btn btn-info" />
                        </div>
                    </div>










