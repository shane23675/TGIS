
@{
    ViewBag.Title = "LoginForShop";
    Layout = "~/Views/Shared/_LayoutEntry2.cshtml";
} 

<form method="post" action="~/Login/LoginForShop">
    <h2 class="card-title">店家登入</h2>
    <div class="form-group card-text">
        <span>ID:</span>
    </div>
    <div>
        <input id="ac" type="text" name="account" class="form-control w-25" />
    </div>
    <div class="form-group card-text">
        <span>PW:</span>
    </div>
    <div>
        <input id="pwd" type="password" name="pwd" class="form-control w-25" />
    </div>
    <input id="Submit1" type="submit" value="submit" />
    <div class="alert-danger w-25">@ViewBag.Error</div>
</form>
