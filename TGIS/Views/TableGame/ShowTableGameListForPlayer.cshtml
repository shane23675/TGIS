@using TGIS.Models
@model IEnumerable<TableGame>

@{
    ViewBag.Title = "ShowTableGameList";
    Layout = "~/Views/Shared/_LayoutPlayer.cshtml";
}

<style>
    .card-deck .card {
        margin-right: 2px;
        margin-left: 2px;
    }

    .custom-control {
        position: relative;
        min-height: 1.5rem;
        padding-left: 0rem;
    }

    .custom-control-inline {
        display: -ms-inline-flexbox;
        display: inline-flex;
        margin-right: 0rem;
    }
</style>




<div class="container">
    <div class="row">
        <div class="col-md-2">
            <nav class="text-center">
                <div id="sel" class="text-white">篩選列表</div>
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <h3><label class="control-label"><strong>分類標籤</strong></label></h3>
                        <!--<div class="row">-->
                        <p class="col-12 mt-3">遊戲難度</p>
                        @foreach (Tag t in ViewBag.DifficultyTagList)
                        {
                            <div class="custom-control custom-checkbox custom-control-inline col-md-6">
                                <input type="checkbox" class="custom-control-input" id="defaultInline-@t.ID" name="difficultTagID" value="@t.ID">
                                <label class="custom-control-label text-nowrap" for="defaultInline-@t.ID">@t.TagName</label>
                            </div>
                        }
                        <!--/////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
                        <p class="col-12 mt-3">遊戲分類</p>
                        @foreach (Tag t in ViewBag.CategoryTagList)
                        {
                            <div class="custom-control custom-checkbox custom-control-inline col-md-6">
                                <input type="checkbox" class="custom-control-input" id="defaultInline-@t.ID" name="categoryTagIDs" value="@t.ID">
                                <label class="custom-control-label text-nowrap" for="defaultInline-@t.ID">@t.TagName</label>
                            </div>
                        }

                        <!--</div>-->
                    </div>
                    <input type="submit" class="btn btn-warning" value="Submit">
                    <img src="images/wifi.PNG" class="img-fluid" />
                }
            </nav>
        </div>



        <div class="col-md-10">


            <nav class="nav">
                <a class="nav-link" href="Index.html">首頁</a>
                <a class="nav-link" href="#">桌遊百科</a>
            </nav>


            <div class="card-deck">

                @foreach (TableGame tg in Model)
                {
                    <div class="col-md-3">
                        <div class="card mt-4">
                            <a href="@Url.Action("ShowTableGameDetail", "TableGame", new { tableGameID=tg.ID})">
                                <div class="card-body">
                                    <img src="@Url.Action("GetPhotoBySourceID", "Photo", new { sourceID=tg.ID, index=0})" class="img-fluid" />
                                </div>
                                <div class="card-footer">
                                    @tg.ChineseName<br />
                                    @tg.EnglishName
                                </div>
                            </a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
