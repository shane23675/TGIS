@model TGIS.Models.Feedback

@{
    ViewBag.Title = "不當檢舉";
    Layout = "~/Views/Shared/_LayoutPlayer.cshtml";
}

    <div class="ml-3 mr-3">
        <h1>
            不當檢舉
            <small class="text-muted h5">檢舉對象：@ViewBag.PlaintiffName</small>
        </h1>       
        <br />
        <p class="h4">
            請詳細描述你遇到的事件以及對方的不當行為。<br />
            我們進行調查與處理<s>如果我們有閒</s>。_(¦3」∠)_<br />
        </p>
        <hr />
    </div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <p class="ml-3">你遇到的狀況描述：</p>
            <div class="col-12">
                @Html.TextAreaFor(model => model.Content, 3, 100, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="javascript: history.back();" class="ml-3 btn btn-secondary ">回上一頁</a>
            <input type="submit" value="送出" class="btn btn-info mr-3" />
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
