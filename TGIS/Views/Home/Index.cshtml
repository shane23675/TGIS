
@{
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPlayer.cshtml";
}

<h2>首頁</h2>
<style>
    .listbutton {
        font-size: 80px;
    }
</style>
<div class="body-content">
    <div id="carouselExampleIndicators" class="carousel slide " data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner ">
            <div class="carousel-item active">
                <img src="~/images/B01.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/B02.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/images/B03.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="row">
        <div class="col-md-3 m-2 text-center">

            <a href="#" class="text-info listbutton"><i class="fas fa-dice"></i></a>

            <input id="GameSearch" type="search" placeholder="請輸入欲搜尋桌遊" class="form-control" aria-label="search" />
            <a href="#" class="text-info listbutton"><i class="fas fa-chess-rook"></i></a>

            <input id="ShopSearch" type="search" placeholder="請輸入欲搜尋店家" class="form-control" aria-label="search" />
        </div>
        <div class="col-md-8 m-1">
            <div class="card">
                <div class="card-header">
                    網站公告
                </div>
                <ul class="list-group">
                    <li class="list-group-item">第一條</li>
                    <li class="list-group-item">第二條</li>
                    <li class="list-group-item">第三條</li>
                    <li class="list-group-item">第四條</li>
                    <li class="list-group-item">第五條</li>
                </ul>
            </div>
            <hr />
            <h3><strong>糾團列表</strong></h3>
            <table class="table table-hover">
                <thead class="bg-light">
                    <tr>
                        <th>揪桌標題</th>
                        <th>目前狀態</th>
                        <th>遊玩日期</th>
                        <th>報名截止期限</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>來玩山中小屋</td>
                        <td>召集中</td>
                        <td>11/22</td>
                        <td>11/21</td>
                    </tr>
                    <tr>
                        <td>狼人殺殺殺</td>
                        <td>召集中</td>
                        <td>11/25</td>
                        <td>11/20</td>
                    </tr>
                    <tr>
                        <td>咱們一起種竹子</td>
                        <td>已成團</td>
                        <td>12/25</td>
                        <td>12/20</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
