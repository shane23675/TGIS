@*@using TGIS.Models
    @model IEnumerable<TableGame>*@

@{
    ViewBag.Title = "歡迎";
    Layout = "~/Views/Shared/_LayoutPlayer.cshtml";
}
<head>
    <script src="https://kit.fontawesome.com/5d5bcaa2bc.js" crossorigin="anonymous"></script>
    <style>
        .listbutton {
            font-size: 80px;
        }

        .three-d {
            padding: 10px;
            box-shadow: inset #000000 3px 3px 15px 3px;
            border-radius: 40%;
        }

        .abc {
            box-shadow: #000000 3px 3px 5px 1px;
            border-radius: 10%;
        }
    </style>
</head>
<div id="carouselExampleIndicators" class="carousel slide mb-4" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner ">
        <div class="carousel-item active">
            <img src="~/images/B01.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/B02.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/B03.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    <div class="col-md-3 m-2 text-center">

        <a href="@Url.Action("ShowTableGameListForPlayer", "TableGame")" class="text-info listbutton"><i class="fas fa-dice-five"></i></a>
        <input id="GameSearch" type="search" placeholder="Search table games..." class="form-control" aria-label="search" />
        @* 之後研究出即時搜尋的方法 *@

        <a href="@Url.Action("ShopIndexForPlayer", "Shop")" class="text-info listbutton"><i class="fas fa-chess-rook "></i></a>
        <input id="ShopSearch" type="search" placeholder="Search shops..." class="form-control" aria-label="search" />
    </div>
    <div class="col-md-8 m-1">

        <div class="card">
            <div class="card-header">
                Announcement
            </div>
            <div class="card-body">
                @Html.Action("_AnnouncementPartail", "Announcement", new { number = 5 })
            </div>
        </div>


        <hr />
        <h3>
            <strong>@Html.ActionLink("Teams", "GetTeamList", "Team", new { usage="TeamIndex"}, new { })</strong>
        </h3>
        @Html.Action("GetTeamList", "Team", new { usage = "Home"})
    </div>
</div>


