@*@using TGIS.Models
    @model IEnumerable<TableGame>*@

@{
    ViewBag.Title = "歡迎";
    Layout = "~/Views/Shared/_LayoutPlayer.cshtml";
}
<head>
    <script src="https://kit.fontawesome.com/5d5bcaa2bc.js" crossorigin="anonymous"></script>
    <style>
        .listbutton {
            font-size: 80px;
        }

        .three-d {
            padding: 10px;
            box-shadow: inset #000000 3px 3px 15px 3px;
            border-radius: 40%;
        }

        .abc {
            box-shadow: #000000 3px 3px 5px 1px;
            border-radius: 10%;
        }

        
        #TGSearchResult,#ShopSearchResult{
            position:relative;
        }

        #TGResultList,#ShopResultList{
            position:absolute;
            width:100%;     
            overflow:auto;
            height:20rem;
        }
         /*#TGResultList{
             z-index:10;
         }*/

        #TGResultList a,#ShopResultList a{
            display:block;
            border:1px solid #a5a5a5;
            padding:0.5rem;
            background-color:#26179ed9;
            color:#ffffff;
            width:100%;
        }

        #TGResultList a:last-child,#ShopResultList a:last-child{
            display:block;
            border:1px solid #a5a5a5;
            border-bottom-left-radius:0.25rem;
            border-bottom-right-radius:0.25rem;
            padding:0.5rem;
            background-color:#26179ed9;
            color:#ffffff;
            width:100%;
        }


    </style>
</head>
<div id="carouselExampleIndicators" class="carousel slide mb-4" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner ">
        <div class="carousel-item active">
            <img src="~/images/B01.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/B02.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/images/B03.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="row">
    <div class="col-md-3 m-2 text-center">

        <div id="TGSearchResult">
            <a href="@Url.Action("ShowTableGameListForPlayer", "TableGame")" class="text-info listbutton"><i class="fas fa-dice-five"></i></a>
            <input id="GameSearch" type="search" placeholder="搜尋想找的桌遊" class="form-control" aria-label="search" />
            @* 之後研究出即時搜尋的方法 *@
            <div id="TGResultList"></div>
        </div>

        <div id="ShopSearchResult">
            <a href="@Url.Action("ShopIndexForPlayer", "Shop")" class="text-info listbutton"><i class="fas fa-chess-rook "></i></a>
            <input id="ShopSearch" type="search" placeholder="搜尋想找的店家" class="form-control" aria-label="search" />
            <div id="ShopResultList"></div>
        </div>
    
    </div>
    <div class="col-md-8 m-1">


            <h3><strong><a href="@Url.Action("AnnouncementIndexForPlayer", "Announcement")">網站公告</a></strong></h3>
                @Html.Action("_AnnouncementPartail", "Announcement", new { number = 5 })




        <hr />
        <h3>
            <strong>@Html.ActionLink("～揪桌一起玩～", "GetTeamList", "Team", new { usage = "TeamIndex" }, new { })</strong>
        </h3>
        @Html.Action("GetTeamList", "Team", new { usage = "Home" })
    </div>
</div>


@section scripts{

    
    <script src="~/Scripts/WebSearch.js"></script>
    <script>

    </script>
}