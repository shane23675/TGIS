<script src="~/Scripts/jquery-3.3.1.min.js"></script>

<script>
    //讓cityID一開始預設選擇Model對應的城市
    $("#cityID").val(@Model.District.CityID);
    init();
    $("#cityID").change(init);
    function init() {
        CId = $("#cityID").val();
        Did = $("#districtID").val();
        $.post("/ajax/generateStateListEdit", { CId, Did }, callback)
    }
    function callback(val) {
        $("#districtID").html(val);
    }

</script>
