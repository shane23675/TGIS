@using TGIS.Models
@model IEnumerable<Shop>

@{
    ViewBag.Title = "ShopIndexForPlayer";
    Layout = "~/Views/Shared/_LayoutPlayer.cshtml";
}

<style>
    .text-box {
        max-width: 80%;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
    }
</style>

<div class="row">
    <div class="col-md-12">

        <ul class="nav nav-pills nav-fill my-3">
            <li class="nav-item">
                @Html.ActionLink("Index", "Index", "Home", null, new { @class = "nav-link" })

            </li>
            <li class="nav-item">
                @Html.ActionLink("Shop List", "ShopDetailForPlayer", "Shop", null, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        City
                    </button>
                    <div class="dropdown-menu">

                        <!-- City -->

                        @foreach (Shop shop in Model)
                        {
                            <a class="dropdown-item" href="#">@shop.District.City.CityName</a>
                        }
                    </div>
                </div>
            </li>
            <li class="nav-item">
                <div class="btn-group">
                    <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        District
                    </button>
                    <div class="dropdown-menu">

                        <!-- District -->

                        @foreach (Shop shop in Model)
                        {
                            <a class="dropdown-item" href="#">@shop.District.DistrictName</a>
                        }
                    </div>
                </div>
            </li>
            <li class="nav-item ">
                <input class="form-control d-inline  w-auto" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success mb-1" type="submit">Search</button>
            </li>
            @*<li class="nav-item">
               
            </li>*@
        </ul>

    </div>





    <!-- 店家列表 -->

    @foreach (Shop shop in Model)
    {
        <div class="card mb-3" style="width: 100%;">
            <div class="row no-gutters">
                <div class="col-md-3">
                    <img src="@Url.Action("GetPhotoBySourceID", "photo", new { sourceID=shop.ID,index=0})" class="card-img " style="height:20vh"><!--Store image-->

                </div>
                <div class="col-md-7">
                    <div class="card-body">

                        <h3 class="card-title">@shop.ShopName</h3>


                        <p class="card-text"><!--add shop.District-->@shop.Address</p>
                        <p class="card-text">@shop.Tel</p>
                        <div class="w-100" style="position:relative">
                            <p class="card-text text-box">@shop.Description</p>
                            <a href="#">  <!--link shop detail--><input type="button" class="btn btn-info" value="More Info" style="position:absolute;right:0;bottom:0" /></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <!--iframe tag add google maps link-->
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3683.2704339782863!2d120.30080261541873!3d22.606374337426107!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x346e0379f38a702f%3A0x8ec0094e5f7e4d1b!2z6ZuG55uS4oCiS1VCSUPosqjmq4PlnJLljYA!5e0!3m2!1szh-TW!2stw!4v1574324711183!5m2!1szh-TW!2stw" frameborder="0" style="border:0;" allowfullscreen="" class="w-100 h-100"></iframe>
                </div>
            </div>
        </div>
    }


</div>










































































