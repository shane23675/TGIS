            @Html.DisplayFor(modelItem => item.AccumulatedHours)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsAccountEnabled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "MgShopEdit", new { id=item.ID }) |
