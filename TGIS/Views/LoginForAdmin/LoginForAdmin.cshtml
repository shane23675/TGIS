
@{
    ViewBag.Title = "管理員中心";
    Layout = "~/Views/Shared/_LayoutEntry2.cshtml";
}
    <form method="post" action="~/LoginForAdmin/LoginForAdmin" class="container">
        <h2>管理員登入</h2>
        <br />
        <div class="ml-3">
            <div class="form-group row">
                <label class="col-form-label">帳號：</label>
                <input id="ac" type="text" name="ac" class="form-control col-10" />
            </div>
            <div class="form-group row">
                <label class="col-form-label">密碼：</label>
                <input id="pwd" type="password" name="pwd" class="form-control col-10" />
            </div>
            <div class="form-group row">
                <input id="Submit1" type="submit" value="登入" class="btn btn-info"/>
                <div class="text-danger">@ViewBag.Error</div>
            </div>
        </div>
    </form>

