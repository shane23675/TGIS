@model TGIS.Models.Player

@{
    ViewBag.Title = "帳密管理";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal ml-3">
        <h2>玩家資料編輯</h2>
        <hr />

        @Html.ValidationSummary()
        <div class="form-group row">
            <div class="col-md-4">
                @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label" })：
                @Html.DisplayFor(m => m.ID)
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "control-label" })：
                @Html.DisplayFor(m => m.Account)
            </div>
            <div class="col-md-4">
                @Html.LabelFor(model => model.NickName, htmlAttributes: new { @class = "control-label" })：
                @Html.DisplayFor(m => m.NickName)
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-2">
                <div class="checkbox">
                    @Html.DropDownList("Gender", null, new { @class = "form-control"})
                </div>
            </div>
            <label class="control-label col-md-1">地址</label>
            <div class="col-md-3">
                @Html.DropDownList("CityID", null, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-3">
                @Html.DropDownList("DistrictID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Birthday, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Birthday, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Points, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Points, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Points, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.IsBanned, htmlAttributes: new { @class = "control-label col-md-1" })
            <div class="col-md-9">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsBanned)
                    @Html.ValidationMessageFor(model => model.IsBanned, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <input type="submit" value="儲存" class="btn btn-primary" />
        @Html.ActionLink("回到列表", "PlayerIndex",null,new {@class="btn  btn-secondary" })
    </div>
}



@section scripts{
    <script src="~/Scripts/address.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/date_convert.js"></script>
}