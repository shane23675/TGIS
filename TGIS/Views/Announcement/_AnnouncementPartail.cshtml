@model IEnumerable<TGIS.Models.Announcement>


<table class="table table-bordered text-center">
    <tr class="table-primary">
        <th>
            @Html.DisplayNameFor(model => model.AnnouncedDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AnnouncedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("查看更多", "AnnounDetail", new { id=item.ID },new { @class="btn btn-info"}) 
        </tr>
}

</table>
