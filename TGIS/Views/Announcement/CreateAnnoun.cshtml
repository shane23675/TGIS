@model TGIS.Models.Announcement

@{
    ViewBag.Title = "新增公告";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal container text-center">
        <h2>發布新公告</h2>
        <br />
        <div class="form-group row">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-1" })
            <div class="col-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-1" })
            <div class="col-10 for">
                @Html.TextAreaFor(model => model.Content, 5, 100, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
                <input type="submit" value="新增" class="btn btn-info" />
    </div>
}

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}
